<Window x:Class="BooksManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BooksManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <WrapPanel DockPanel.Dock="Top">
            <Label>Suche</Label>
            <TextBox Width="200" Name="suchTb"/>
            <Button Click="Such">Suchen</Button>
            <Button Click="SaveJson">Save as JSON...</Button>
            <Button Click="LoadJson">Load from JSON...</Button>
        </WrapPanel>
        <DataGrid Name="myGrid"/>
    </DockPanel>
</Window>
