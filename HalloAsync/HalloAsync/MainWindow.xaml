<Window x:Class="HalloAsync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HalloAsync"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="200">
    <StackPanel>
        <Button Click="OhneThread">Start ohne Thread</Button>
        <Button Click="StartTask">Start Task</Button>
        <Button Click="StartTaskmitTS">Start Task mit TS</Button>
        <Button Click="LoadFromDB">Lade von DB</Button>
        <Button Click="LoadFromDBAsyncAwait">Lade von DB (async/await)</Button>
        <Button Click="StartAsyncAwait">Async/Await (Zähler)</Button>
        <Button Click="StartAltUndLangsam">Meine alte, langsame Funktion</Button>
        
        <ProgressBar Height="22" Name="pb1"/>
        <Button Click="Abort" >Abbrechen</Button>
    </StackPanel>
</Window>
